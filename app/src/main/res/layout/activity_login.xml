<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background">
    <ImageView
        android:id="@+id/Lg_lwicon"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:src="@drawable/lenrnwordicon"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"/>
    <EditText
        android:id="@+id/Lg_userName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:hint="请输入您的用户名/手机号/邮箱"
        android:maxLines="1"
        android:gravity="center"
        android:maxLength="16"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/login_text_frame"
        />
    <EditText
        android:id="@+id/Lg_passWord"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/Lg_userName"
        android:hint="请输入密码"
        android:maxLines="1"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/login_text_frame"
        />
    <Button
        android:id="@+id/Lg_lg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/Lg_passWord"
        android:layout_marginTop="15dp"
        android:text="登       录"
        android:textSize="20sp"
        android:layout_marginHorizontal="15dp"
        android:textStyle="bold"
        android:background="@drawable/login_text_frame"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/Lg_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注  册"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:background="#00000000"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/Lg_findpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="18sp"
            android:background="#00000000"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>


</LinearLayout>